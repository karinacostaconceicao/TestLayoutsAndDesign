<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="32dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textSize="50sp"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maybe you don't like to talk much about yourself, but you should had told that you're thinking about someone else."
        android:textSize="20sp"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/constraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Constraint Layout"
            android:textSize="20sp"
            android:paddingRight="10sp"
            android:gravity="center_horizontal"/>
        <Button
            android:id="@+id/constrain_layout_btt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="button"
            android:onClick="loadConstrainLayout"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Table Layout"
            android:textSize="20sp"
            android:paddingRight="53dp"
            android:gravity="center_horizontal"/>
        <Button
            android:id="@+id/table_layout_btt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="button"
            android:onClick="loadTableLayout"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RatingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="15dp"
            android:progressTint="#C69B17"
            android:rating="5" />

    </LinearLayout>


</LinearLayout>